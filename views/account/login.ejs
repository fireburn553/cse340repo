<h1>
    <%= title %>
</h1>

<%- messages() %>

    <form>
        <label for="account_email">Email:</label>
        <input type="email" name="account_email" required placeholder="Enter your email address">

        <div>
            <label for="accountPassword">Password:</label>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
                character</span>
            <input type="password" name="account_password" id="accountPassword" required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>
        <button type="submit">Login</button>
    </form>

    <div class="registration-link">
        <p>Don't have an account? <a href="/account/register">Register here</a>.</p>
    </div>