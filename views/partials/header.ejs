<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="acct-btn">
    <% if (locals.loggedin) { %>
      <a title="Click to navigate to the account management view" href="/account/welcome-user">Welcome <%=
          locals.account_firstname %></a>
      <a title="Click to log out" href="/logout">Logout</a>
      <% } else { %>
        <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
          <!-- account login path is going to the view -->
  </div>
</header>