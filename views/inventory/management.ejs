<!--  -->
<h1>
    <%= title %>
</h1>

<%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <a id="classification-button" href="/inv/classification">
                <h2>Add New Classification</h2>
            </a>

            <a id="inventory-button" href="/inv/inventory">
                <h2>Add New Inventory Item</h2>
            </a>

            <h2>Manage Inventory</h2>
            <div class="select-classification">
                <%- classification %>
            </div>


            <table id="inventoryDisplay"></table>

            <noscript>JavaScript must be enabled to use this page.</noscript>


            <script src="../../js/inventory.js"></script>